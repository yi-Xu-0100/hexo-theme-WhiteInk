body{
    background-color: #e0e0e0;
    font-size: 1.25em;
    line-height: 1.5;
    font-family: "Comic Sans MS",Georgia,cursive,"KaiTi","Microsoft YaHei",LiSu,sans-serif;
    margin: 0px;
}
.container {
    max-width: 960px;
    margin: 0 auto;
}
a:-webkit-any-link{
    text-decoration:none;
    color: #000000;
    &:hover {
        color: #2988de;
    }
}

@import "_partial/header";

@media (min-width: 960px){
    @import "_partial/post/post-media-large";
    @import "_partial/posts/posts-media-large";
}

@media (min-width: 370px) and (max-width: 959px){
    @import "_partial/post/post-media-medium";
    @import "_partial/posts/posts-media-medium";
}

@media (max-width: 370px){
    @import "_partial/post/post-media-small";
    @import "_partial/posts/posts-media-small";
}
@import "_partial/archive";

@import "_partial/nav";

@import "_partial/footer";

@import "_partial/article-nav";