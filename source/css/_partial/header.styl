@media (min-width: 600px){
    .header {
        height: 50px;
        font-size: 1.5em;
        justify-content: space-between;
        margin: auto;

        .blog-title {
            margin: 0;
            padding: 0;
            float: left;

            .logo {
                color: #AAA;
                margin: 0;
                padding: 0;
                float: left;
                margin-right: 15px;
                }

            .header-avatar {
                margin: 0;
                padding: 0;
                float: left;
                margin-right: 20px;
                img {
                    width:50px;
                    height:50px;
                    max-width: 100%;
                    border-radius: 50%;
                    border: 0;
                }
            }
        }

        .navbar {
            margin: 0;
            padding: 0;
            float: right;

            .mainnav{
                .menu {
                    margin: 0;
                    padding: 0;
                    float: left;
                    margin-right: 10px;
                    .menu-item {
                        display: inline-block;
                        margin-right: 10px;
                        font-size: 0.75em;
                        .menu-item-link {
                            color: #AAA;
                            &:hover {
                                color: #368CCB;
                            }
                        }
                    }
                }
            }
        }
    }
}

