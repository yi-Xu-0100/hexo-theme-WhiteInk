.archive {
    font-size: 1rem; /* 16px */
    margin: 1.25em 0.625em; /* 20px 10px */
    padding: 1.875em 3.125em; /* 30px 50px */
    background-color: #fff;
    border: 0.0625em solid #ddd; /* 1px */
    box-shadow: 0.1875em 0.125em 0.5em rgba(0,0,0,0.3); /* 3px 2px 8px */
    font-weight: bold;

    .post-archive {
        list-style: none;
        padding: 0;

        .post-item {
            margin: 0.625em 0; /* 10px */
            padding: 0.1875em 0.3125em; /* 3px 5px */
            background-color: #fff;
            border: 1px solid #ddd;
            box-shadow: 0 0 0.125em #ddd; /* 2px */

            .post-date {
                display: inline-block;
                margin-right: 0.625em; /* 10px */
                color: #bababa;
            }

            .post-title-link {
                color: #2988de;
                border: none;
            }
        }
    }
}