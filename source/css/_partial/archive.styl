.archive {
    margin: 1em auto;
    padding: 30px 50px;
    background-color: #fff;
    border: 1px solid #ddd;
    box-shadow: 0 0 2px #ddd;
    font-family: "Comic Sans MS", cursive, LiSu, sans-serif;
    font-weight: bold;
    
    .post-archive {
        list-style: none;
        padding: 0;
        
        .post-item {
            margin: 10px 0;
            padding: 3px 5px;
            background-color: #fff;
            border: 1px solid #ddd;
            box-shadow: 0 0 2px #ddd;
        
            .post-date {
                display: inline-block;
                margin-right: 10px;
                color: #BABABA;
            }

            .post-title {
                color: #368CCB;
                text-decoration: blink;
            }

        }
    }
}