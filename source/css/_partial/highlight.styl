/* https://github.com/chriskempson/tomorrow-theme */

highlight-background = #2d2d2d
highlight-current-line = #393939
highlight-selection = #515151
highlight-foreground = #cccccc
highlight-comment = #999999
highlight-red = #f2777a
highlight-orange = #f99157
highlight-yellow = #ffcc66
highlight-green = #99cc99
highlight-aqua = #66cccc
highlight-blue = #6699cc
highlight-purple = #cc99cc

pre, code{
    font-family: "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace;
}

pre{
    background: #2d2d2d;
    border: none;
    margin: 0;
    padding: 0;
    overflow: auto;
    color: #cccccc;
}

code{
    background: #fff
    border: 0.0625em solid #333; /* 1px */
    border-radius: 3px; 
    padding: 0 0.0625em; /* 1px */
    margin: 0 0.0625em; /* 1px */
}

.highlight{
    font-size: 1rem; /* 16px */
    background: #2d2d2d;
    margin: 0;
    padding: 0.9375em 1.25em; /* 15px 20px */
    border-style: solid;
    border-color: #ddd;
    border-width: 0.0625em 0; /* 1px */
    overflow: auto;
    color: #cccccc;

    table {
        margin: 0;
        width: auto;
    }

    td {
        border: none;
        padding: 0;
    }

    tr {
        text-align: inherit;
    }
}

.line, figcaption, highlight, code, pre{
    line-height: 1.5;
}

figcaption{
    width: 100%;
    color: #999999;
    margin-bottom: 1em;

    a{
        float: right;
        color: #FFFFFF;
    }

    a:hover{
        color: #2988de;
    }
}

.gutter pre{
    color: #666;
    text-align: right;
    padding-right: 1.25em; /* 20px */
}

.line.marked{
  background: #515151;
}

.gist{
    margin: 0;
    border-style: solid;
    border-color: #ddd;
    border-width: 1px 0;
    background: #2d2d2d;
    padding: 15px 20px 15px 0;

    .gist-file{
        border: none;
        font-family: "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace;
        margin: 0;

        .gist-data{
            background: none;
            border: none;

            .line-numbers{
                color: #666;
                font-size: 0.85em;
                background: none;
                border: none;
                padding: 0 20px 0 0;
            }

            .line-data{
                padding: 0 !important;
            }
        }

        .highlight{
            margin: 0
            padding: 0
            border: none
        }

        .gist-meta{
            background: #2d2d2d;
            color: #999999;
            font: 0.85em -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;
            text-shadow: 0 0;
            padding: 0;
            margin-top: 1em;
            margin-left: 20px;

            a{
                color: #258fb8;
                font-weight: normal;
            }

            a:hover{
                text-decoration: underline;
            }
        }
    }
}
