.post {
    margin: 20px 10px;
    padding: 30px 50px;
    background-color: #fff;
    border: 1px solid #ddd;
    box-shadow: 3px 2px 8px rgba(0,0,0,0.3);

    .post-title {
        text-align: center;
        font-size: 1em;
        margin: 0px;
        border-bottom: 5px solid rgba(0,0,0,0.8);

        .title {
            margin: 0;
        }
    }

    .post-meta {
        margin: 0 0 30px 0;

        .post-time {
            text-align: center;
        }
    }

    .post-content {
        margin: 0;
        font-size: 16px;

        h1 {
            font-size: 24px;
            padding-left: 5px;
            text-align: center;
        }
        h2 {
            font-size: 22px;
            padding-left: 5px;
            border-left: 5px solid rgba(0,0,0,1);
        }

        h3 {
            font-size: 20px;
            margin: 20px 0 20px 32px;
            padding-left: 5px;
            border-left: 2.5px solid rgba(0,0,0,0.8);
        }
        h4 {
            font-size: 18px;
            margin: 20px 0 20px 16px;
            padding-left: 5px;
            border-left: 2.5px solid rgba(0,0,0,0.8);
        }
        h5 {
            font-size: 17px;
            padding-left: 1px;
            margin: 20px 0;
            font-weight: bold;
        }
        h6 {
            font-size: 16px;
            padding-left: 1px;
            margin: 20px 0;
            font-weight: bold;
        }

        p {
            margin: 10px 0;
            
        }

        blockquote {
            margin: 0;
            padding: 10px;
            border-left: 5px solid rgba(0,0,0,0.4);
            background-color: rgba(224,224,224,0.5);
        }
        ul {
            padding: 0px 0 0px 20px;
            margin: 0;
        }
        li {
            display: list-item;
            padding: 2px 0 2px 0;
            margin: 0;
        }
    }
}