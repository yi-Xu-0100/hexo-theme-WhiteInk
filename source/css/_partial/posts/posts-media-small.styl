.posts {
    .post: first-child {
        margin-top: 0;
    }
    .post-title {
        font-size: 1.5em;
        a {
            color:#2988de;
        }
    }
    .post-meta {
        color: #BABABA;
        float: left;
        .post-time {
            float: left;
            margin-right: 10px;
        }

        .post-tags-link{
            overflow:hidden;
            display:block;
            width: 0;
            height: 0;
        }

        .read-more {
            float: left;
        }
    }
}
