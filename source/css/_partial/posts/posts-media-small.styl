.posts {
    .post-card {
        font-size: 1rem; /* 16px */
        margin: 1.25em 0.625em; /* 20px 10px */
        padding: 1.875em 3.125em; /* 30px 50px */
        background-color: #fff;
        border: 0.0625em solid #ddd; /* 1px */
        box-shadow: 0.1875em 0.125em 0.5em rgba(0,0,0,0.3); /* 3px 2px 8px */
    }

    .card-title {
        margin: 0.5em 0; /* 8px */
        overflow: hidden;

        a {
            font-size: 1.5em; /* 24px */
            color: #2988de;
            border: 0;
            font-weight: bold;
        }
    }

    .card-meta {
        color: #BABABA;
        height: 1.875em;
        margin: 0.5em 0; /* 8px */

        .card-tags-link,
        time,
        .read-more {
            font-size: 1.25em; /* 20px */
            float:left;
        }


        .card-tags-link {
            display: none;
        }

        .read-more {
            float: right;
            border: 0;
        }

        .card-tags-link:hover,
        .read-more:hover {
            color: #2988de;
            border-bottom: 0.1875em solid #2988de; /* 3px */
        }
    }
}