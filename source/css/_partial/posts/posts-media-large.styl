.posts {
    .post-card {
        margin: 20px 10px;
        padding: 30px 50px;
        background-color: #fff;
        border: 1px solid #ddd;
        box-shadow: 3px 2px 8px rgba(0,0,0,0.3);
    }
    .card-title {
        font-size: 1.5em;
        a {
            color: #2988de;
        }
    }
    .card-meta {
        color: #BABABA;

        .card-tags-link{
            text-overflow: ellipsis;
        }
        .card-tags-link:before {
                content: " #";
            }
        
        .read-more{
            float: right;
        }
    }
}