.article-nav {
    background-color: #fff;
    border: 1px solid #ddd;
    box-shadow: 0.1875em 0.125em 0.5em rgba(0,0,0,0.3); /* 3px 2px 8px */
    padding: 0.625em; /* 10px */
    margin: 1.25em 0.625em; /* 20px 10px */
    height: 1.5em; /* 24px */
    
    a {
        color: #333;
        margin: 0 0.625em; /* 10px */
        border: 0;
    }
    a:hover {
        color:#2988de;
    }

    .article-nav-newer {
        float: left;
    }
    .article-nav-older {
        float: right;
    }
}
