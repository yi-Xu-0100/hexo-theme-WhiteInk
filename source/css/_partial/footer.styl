@media (min-width: 370px) {
    .footer{
        height: 120px;
        font-size: 0.85em;
        padding: 30px 20px;
        margin: 20px 0 0;
        text-align: center;
        background: #33363b;
        a{
            color: #888888;
            &:hover{
                color: #2988de;
            }
        }
        .footer-left{
            float: left;
        }
        .footer-right{
            float: right;
        }
    }
}

@media (max-width: 369px) {
    .footer{
        font-size: 0.85em;
        color: #696969;
        padding-top: 60px;
        padding-bottom: 30px;
        margin: 20px 10px;
        text-align: center;
        a{
            color: #888888;
            &:hover{
                color: #2988de;
            }
        }
        .footer-left-item{
            display: flex;
            justify-content : center;
            align-items: center;
        }
        .footer-right-item{
            display: flex;
            justify-content : center;
            align-items: center;
        }
    }
}