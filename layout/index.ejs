<section class="posts">
  <% page.posts.each(function (post) { %>
    <article class="post">
      <div class="post-title">
        <a class="post-title-link" href="<%- url_for(post.path) %>"><%= post.title %></a>
      </div>
      <div class="post-content">
        <a class="excerpt-content" href="<%- url_for(post.path) %>"><%- post.excerpt %></a>
      </div>
      <div class="post-meta">
        <span class="post-time"><%- date(post.date, "YYYY-MM-DD") %></span>
        <%- list_tags(post.tags, {
        show_count: false,
        class: 'post-tags',
        style: 'none',
        separator: ''
        }) %>
        <a class="read-more" href="<%- url_for(post.path) %>"> 阅读全文 </a>
      </div>
    </article>
  <% }) %>
</section>
<%- partial('_partial/paginator') %>