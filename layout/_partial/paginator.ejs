<% if (page.total > 1 && index){ %>
    <nav class="page-nav">
        <%- paginator({
            prev_text: "&laquo; " + __("Paginator.Prev"),
            next_text: __("Paginator.Next") + " &raquo;"
        }) %>
    </nav>
<% }else{ %>
    <% if (post.prev || post.next){ %>
        <%
            prev_text = "<< " + __("Paginator.Prev");
            next_text = __("Paginator.Next") + " >>";
        %>
        <nav class="article-nav">
            <% if (post.prev){ %>
                <a href="<%- url_for(post.prev.path) %>" class="article-nav-newer"><%= prev_text %></a>
            <% } %>
            <% if (post.next){ %>
                <a href="<%- url_for(post.next.path) %>" class="article-nav-older"><%= next_text %></a>
            <% } %>
        </nav>
    <% } %>
<% } %>